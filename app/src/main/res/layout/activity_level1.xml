<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/polospolos"
    tools:context=".Activitylevel1">

    <ImageView
        android:id="@+id/logomediakecil"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="55dp"
        android:contentDescription="@string/gambar_deskripsi"
        app:layout_constraintBottom_toTopOf="@+id/gamelevel1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logomediakecil" />

    <!-- Latar Belakang -->


    <ImageView
        android:id="@+id/gamelevel1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/gambar_deskripsi"
        android:scaleType="fitXY"
        android:src="@drawable/gamelevel1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="16dp"
        android:text="Waktu: 120 detik"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#2B2E43"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gamelevel1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/papanskor"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/papanskor"
        android:layout_width="170dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="57dp"
        android:contentDescription="@string/gambar_deskripsi"
        app:layout_constraintBottom_toTopOf="@+id/gamelevel1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level1"
        app:srcCompat="@drawable/skor" />


    <!-- Contoh penggunaan ImageView untuk nyawa -->

    <!-- Gambar Jawaban (Contoh jawaban objek pertama) -->


    <TextView
        android:id="@+id/Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#2B2E43"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/papanskor"
        app:layout_constraintEnd_toEndOf="@+id/papanskor"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/papanskor"
        app:layout_constraintTop_toTopOf="@+id/papanskor"
        app:layout_constraintVertical_bias="0.888" />

    <Button
        android:id="@+id/bthome"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/home"
        android:contentDescription="@string/home_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamelevel1" />

    <Button
        android:id="@+id/btpertanyaan"
        android:layout_width="66dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/pertanyaan"
        android:contentDescription="@string/description_btpertanyaan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gamelevel1" />

    <ImageView
        android:id="@+id/level1"
        android:layout_width="170dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="7dp"
        android:contentDescription="@string/gambar_deskripsi"
        app:layout_constraintBottom_toTopOf="@+id/Score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/level1" />


    <ImageView
        android:id="@+id/jawaban1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="302dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="126dp"
        app:layout_constraintBottom_toBottomOf="@+id/gamelevel1"
        app:layout_constraintEnd_toEndOf="@+id/gamelevel1"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="@+id/gamelevel1"
        app:layout_constraintTop_toTopOf="@+id/gamelevel1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/jawaban1"
        android:contentDescription="@string/gambar_deskripsi" />


    <ImageView
        android:id="@+id/jawaban2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="527dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/gamelevel1"
        app:layout_constraintEnd_toEndOf="@+id/gamelevel1"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="@+id/gamelevel1"
        app:layout_constraintTop_toTopOf="@+id/gamelevel1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/jawaban2"
        android:contentDescription="@string/gambar_deskripsi" />


    <ImageView
        android:id="@+id/jawaban3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="416dp"
        app:layout_constraintBottom_toBottomOf="@+id/gamelevel1"
        app:layout_constraintEnd_toEndOf="@+id/gamelevel1"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="@+id/gamelevel1"
        app:layout_constraintTop_toTopOf="@+id/gamelevel1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/jawaban3"
        android:contentDescription="@string/gambar_deskripsi" />


</androidx.constraintlayout.widget.ConstraintLayout>